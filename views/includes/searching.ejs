<script>
  const searchInput = document.getElementById("search-input");

  searchInput.addEventListener("input", () => {
    const rows = document.querySelectorAll(".employee-row");
    const searchInputValue = searchInput.value.toLowerCase();
    const searchInputFirstPart = searchInputValue.split(" ")[0];
    const searchInputSecondPart = searchInputValue.split(" ")[1];

    rows.forEach((row) => {
      const fullName = row
        .querySelector(".employee-full-name")
        .innerText.toLowerCase();
      const firstName = fullName.split(" ")[0];
      const secondName = fullName.split(" ")[1];

      if (!searchInputSecondPart) {
        if (
          firstName.includes(searchInputFirstPart) ||
          secondName.includes(searchInputFirstPart)
        ) {
          if (row.style.display === "none") {
            row.style.display = "";
          }
          return;
        }
      }

      else if (
        firstName.includes(searchInputFirstPart) &&
        secondName.includes(searchInputSecondPart)
      ) {
        if (row.style.display === "none") {
          row.style.display = "";
        }
        return;
      }
      row.style.display = "none";
    });
  });
</script>
